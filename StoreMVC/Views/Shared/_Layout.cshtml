<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <header>
        <div style="overflow: hidden;">
            <a id="koszykHeaderLink" href="link">
                Koszyk (<span id="basket-header-quantity">@Html.Action("GetQuantityFromBasket", "Basket")</span>)
                <span></span>
            </a>
            <a id="indexHeaderLogo" href="@Url.Content("~/")">
                <img src="@Url.Content("~/Content/Images/storelogo.png")" class="center" />
            </a>
        </div>
    </header>


    <div>
        @RenderBody()
    </div>


    <footer>
        <nav>
            <ul>
                
                <li><a href="@Url.Action("StaticSites", "Home", new { name = "AboutUs"})" style="">About Us</a></li>
                <li><a href="@Url.Action("StaticSites", "Home", new { name = "SocialMedia"})" style="">Social Media</a></li>
                <li><a href="@Url.Action("StaticSites", "Home", new { name = "Reviews"})" style="">Reviews</a></li>
                <li><a href="@Url.Action("StaticSites", "Home", new { name = "Help"})" style="">Help</a></li>
                <li><a href="@Url.Action("StaticSites", "Home", new { name = "TermsOfUse"})" style="">Terms Of Use</a></li>
                <li><a href="@Url.Action("StaticSites", "Home", new { name = "Contact"})" style="">Contact</a></li>
            </ul>
        </nav>
        <div id="footerLogo">
        </div>
        <div id="footerCopyright">
            Copyright &copy; 2019 Test Store
        </div>
    </footer>

    @RenderSection("Scripts", required : false)
</body>
</html>